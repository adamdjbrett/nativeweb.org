        <section class="bg-body-tertiary py-6" id="blogers">
            <div class="container">
                <div class="text-center mb-5">
                <h3 class="section-title fw-bold">
                    {{widget.blog.title}}
                </h3>
                <p>{{widget.blog.description}}</p>
                </div>
                <div class="row g-4">
                    {% if post.data.image %}{% for post in collections.posts | limit(3) %}<div class="col-md-4">
                        <div class="card card-pro-elevated h-100">
                           <a href="{{post.url}}" title="{{post.data.title}}"><img src="{{post.data.image}}" class="card-img-top" width="100%" height="100%" alt="{{post.data.title}}"></a>
                            <div class="card-body">
                                <h3 class="card-title fw-bold">{{post.data.title}}</h3>
                                {% if post.data.description %}<p class="card-text text-muted small">{{post.data.description}}</p>{% endif%}
                            </div>
                        </div>
                    </div>{% endfor %}
                    {% else %}
                    {% for post in collections.posts | limit(3) %}<div class="col-md-4">
                        <div class="card card-pro-elevated h-100 text-center">
                            <div class="card-body">
                                <a href="{{post.url}}" class="none text-body"><i class="{{widget.blog.icon}} shadow-sm p-1 fa-2x display-6 
                                rounded-circle border border-{{widget.blog.button.color}}"></i>
                                <h3 class="card-title fw-bold">{{post.data.title}}</h3>
                                {% if post.data.description %}<p class="card-text text-muted small">{{post.data.description}}</p>{% endif%}
                                </a>
                            </div>
                        </div>
                    </div>{% endfor %}{% endif %}
                    <p class="col-md-12 text-center p-3 mt-5 mb-3">
                        <a href="{{widget.blog.button.url}}" 
                        class="btn btn-{{widget.blog.button.color}} btn-lg custom-btn p-3 rounded-pill col-12 col-md-3">{{widget.blog.button.text}}</a>
                    </p>
                </div>
            </div>
        </section>
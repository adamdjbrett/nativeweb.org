        <section class="container py-6" id="podcaster">
            <div class="mb-5 text-center">
            <h3 class="section-title fw-bold">{{widget.podcast.title}}</h3>
            <p>{{widget.podcast.description}}</p>
            </div>
            <div class="row g-4">
                {% for p in collections.podcasts | limit(3) %}<div class="col-md-6 col-lg-4">
                    <div class="card card-podcast h-100 p-4 bg-body-secodnary
                    border border-{{widget.podcast.color}}">
                        <div class="card-body">
                            {% if p.data.image %}<a title="{{p.data.title}}" href="{{p.url}}"><img class="img-fluid" width="100%" height="100%" 
                            src="{{p.data.image}}" alt="{{p.data.title}}" loading="lazy"/></a>{% else %}
                            <a href="{{p.url}}" title="{{p.data.title}}"><i class="{{widget.podcast.icon}} 
                                display-5 text-{{widget.podcast.color}} mb-3 p-3 bg-body-tertiary border border-{{widget.podcast.color}} rounded-circle"></i></a>{% endif %}
                            <h3 class="card-title fw-bold">{{p.data.title}}</h3>
                            <p class="card-text text-muted small">{{p.data.description}}</p>
                            <a href="{{p.url}}" class="btn btn-sm col-12 btn-{{widget.podcast.color}} rounded-pill">{{widget.podcast.list_button}} {{p.data.title}}</a>
                        </div>
                    </div>
                </div>{% endfor %}
                    <p class="col-md-12 text-center p-3 mt-5 mb-3">
                        <a href="{{widget.podcast.button.url}}" 
                        class="btn btn-{{widget.podcast.color}} btn-lg custom-btn col-12 p-3 rounded-pill col-md-3">{{widget.podcast.button.text}}</a>
                    </p>
            </div>
        </section>